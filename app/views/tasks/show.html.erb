<h1><%= @task.taskname %></h1>

<p><%= @task.description %></p>

<ul>
    <li><%= link_to "Edit Task", edit_task_path(@task) %></li>
    <li><%= link_to "Delete Task", task_path(@task), data: {
        turbo_method: :delete,
        turbo_confirm: "Task Completed?"
    } %></li>
    <li><%= link_to "Back to Tasks", root_path %></li>
</ul>